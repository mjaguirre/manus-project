{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "plugin:react/recommended",
      "airbnb",
      "eslint:recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "ignorePatterns": [
    ],
    "rules": {
      "no-trailing-spaces": "error",
      "prettier/prettier": "error",
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [".jsx"]
        }
      ],
      "semi": "error",
      "quotes": [2, "single"],
      "no-shadow": "off",
      "no-param-reassign": ["error", { "props": false }],
      "indent": ["error", 2],
      "import/extensions": ["error", "never"],
      "no-use-before-define": "off",
      "react/prop-types": 0
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js", ".jsx"],
          "moduleDirectory": ["node_modules", "."]
        }
      }
    }
  }